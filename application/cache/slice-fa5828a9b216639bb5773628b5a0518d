        var jenis = function(){
            var jenis = $('#jenis').val();
            if(jenis == 1){
                $('#limit-g').removeClass('d-none');
                $('#kat-id').removeClass('d-none');
            }else if(jenis == 2){
                $('#limit-g').addClass('d-none');
                $('#kat-id').addClass('d-none');
                $('#dat-isi').addClass('d-none');      
